<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientgreen"
    tools:context=".Login">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="47dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GoCars: Go The Distance"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:layout_marginLeft="115dp"
        android:id="@+id/text">
    </TextView>
    <EditText
        android:id="@+id/editTextMail"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:drawableLeft="@drawable/ic_email"
        android:textColorHint="#ffffff"
        android:background="@drawable/input_bg"
        android:layout_below="@+id/text"
        android:layout_marginTop="30dp"
        android:drawablePadding="10dp"
        android:layout_marginLeft="40dp"
        />
    <EditText
        android:id="@+id/editTextPass"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        android:drawableLeft="@drawable/ic_security"
        android:textColorHint="#ffffff"
        android:background="@drawable/input_bg"
        android:layout_below="@+id/editTextMail"
        android:layout_marginTop="30dp"
        android:drawablePadding="10dp"
        android:layout_marginLeft="40dp"
        />
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="Didn't have an account :"
        android:layout_below="@id/editTextPass"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="80dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="Sign Up"
        android:id="@+id/sign"
        android:layout_below="@id/editTextPass"
        android:layout_marginTop="15dp"
        android:layout_toRightOf= "@+id/text1"
        android:layout_marginLeft="15dp"/>
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="@drawable/btn_bg"
        android:textStyle="bold"
        android:layout_below="@id/text1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="165dp"
        android:backgroundTint="#7FFFD4"
        />

</RelativeLayout>